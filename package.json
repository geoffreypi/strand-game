{
  "name": "protein-folding-game",
  "version": "0.2.0",
  "description": "A puzzle game inspired by Opus Magnum focused on molecular biology",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:verbose": "VERBOSE_TESTS=1 NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "build": "npm run lint && npm run test",
    "dev": "python3 -m http.server 8080",
    "prepare": "husky install"
  },
  "keywords": [
    "game",
    "puzzle",
    "molecular-biology",
    "protein-folding"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "maxWorkers": 1,
    "globalSetup": "<rootDir>/src/test-utils/global-setup.js",
    "reporters": [
      "default",
      "<rootDir>/src/test-utils/test-reporter.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/src/test-utils/jest-setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/test-utils/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  }
}
